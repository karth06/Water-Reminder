{
  "name": "water-reminder",
  "displayName": "Water Reminder",
  "description": "Stay hydrated with a clean, minimalist water reminder for VS Code!",
  "version": "1.0.0",
  "publisher": "karth06",
  "repository": {
    "type": "git",
    "url": "https://github.com/karth06/Water-Reminder"
  },
  "icon": "resources/water-icon.png",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "water",
    "reminder",
    "health",
    "timer",
    "retro"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "water-reminder",
          "title": "Water Reminder",
          "icon": "resources/water-icon.svg"
        }
      ]
    },
    "views": {
      "water-reminder": [
        {
          "type": "webview",
          "id": "waterReminder.retroView",
          "name": "Water Reminder",
          "icon": "resources/water-icon.svg"
        },
        {
          "type": "tree",
          "id": "waterReminderView",
          "name": "Quick Controls"
        }
      ]
    },
    "commands": [
      {
        "command": "waterReminder.startTimer",
        "title": "Start Water Timer",
        "icon": "$(play)"
      },
      {
        "command": "waterReminder.pauseTimer",
        "title": "Pause Water Timer",
        "icon": "$(debug-pause)"
      },
      {
        "command": "waterReminder.resetTimer",
        "title": "Reset Water Timer",
        "icon": "$(debug-restart)"
      },
      {
        "command": "waterReminder.drankWater",
        "title": "ðŸ’§ Log Water Intake",
        "icon": "$(pass)"
      },
      {
        "command": "waterReminder.openRetroView",
        "title": "Open Retro Timer View",
        "icon": "$(device-desktop)"
      },
      {
        "command": "waterReminder.resetDailyCount",
        "title": "Reset Daily Water Count"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "waterReminder.openRetroView",
          "when": "view == waterReminderView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Water Reminder",
      "properties": {
        "waterReminder.intervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 30,
          "maximum": 60,
          "description": "Time interval for water reminders (in minutes). Recommended: 30-60 minutes for optimal hydration."
        },
        "waterReminder.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start timer after drinking water"
        },
        "waterReminder.dailyGoal": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 20,
          "description": "Daily water intake goal (number of times)"
        },
        "waterReminder.dailyResetHour": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 23,
          "description": "Hour of day when daily counter resets (0-23, local time). Default is 5 AM to account for sleep schedule."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run compile:webview",
    "compile": "tsc -p ./",
    "compile:webview": "node build-webview.mjs --production",
    "watch": "tsc -watch -p ./",
    "watch:webview": "node build-webview.mjs --watch",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/animejs": "^3.1.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.0",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "author": "karth06",
  "dependencies": {
    "animejs": "^4.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
